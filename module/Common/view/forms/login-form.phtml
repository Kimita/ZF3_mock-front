<?php $form = $this->form; ?>
<?php $form->setAttribute('action', $this->url('site-login')); ?>
<?php $form->prepare(); ?>
<?php echo $this->form()->openTag($form) ?>

<div class="form-group <?php echo count($form->get('username')->getMessages()) > 0 ? 'has-error' : '' ?>">
  <?php echo $this->formLabel($form->get('username')); ?>
  <div class="col-sm-5">
    <?php echo $this->formElement($form->get('username')); ?>
