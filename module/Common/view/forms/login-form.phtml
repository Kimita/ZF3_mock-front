            ->setMessageOpenFormat('<div class="help-inline emsg">')
            ->setMessageSeparatorString('</div><div class="help-inline emsg">')
            ->setMessageCloseString('</div>')
            ->render($form->get('username')); ?>
  </div>
</div>

<div class="form-group <?php echo count($form->get('password')->getMessages()) > 0 ? 'has-error' : '' ?>">
  <?php echo $this->formLabel($form->get('password')); ?>
